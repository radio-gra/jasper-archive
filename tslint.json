{
  "rules": {
    "arrow-return-shorthand": true,
    "trailing-comma": [
      false,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "interface-name": [false, "always-prefix"],
    "callable-types": true,
    "class-name": true,
    "comment-format": [true, "check-space", "check-uppercase"],
    "curly": true,
    "eofline": true,
    "forin": false,
    "import-blacklist": [true, "rxjs/Rx"],
    "import-spacing": true,
    "indent": [true, "spaces"],
    "interface-over-type-literal": true,
    "label-position": true,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import",
        "type": "number",
        "minimum": "1"
      }
    ],
    "member-access": [true],
    "member-ordering": [
      true,
      "static-before-instance",
      "variables-before-functions",
      {
        "order": ["static-field", "instance-field", "static-method", "instance-method"]
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-internal-module": true,
    "no-eval": true,
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": {
      "severity": "warn",
      "options": ["match-declaration-order"]
    },
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "prefer-const": true,
    "quotemark": [true, "single"],
    "radix": true,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "triple-equals": [true, "allow-null-check"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "require-const-for-all-caps"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
    "directive-selector": [true, "attribute", "", "camelCase"],
    "component-selector": [true, "element", "", "kebab-case"],
    "no-namespace": true,
    "jsdoc-format": [true, "check-multiline-start"],
    "banana-in-box": true,
    "contextual-life-cycle": true,
    "decorator-not-allowed": true,
    "templates-no-negated-async": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-input-rename": {
      "severity": "warn",
      "options": ["true"]
    },
    "no-output-rename": {
      "severity": "warn",
      "options": ["true"]
    },
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": [true, "Component"],
    "directive-class-suffix": [true, "Directive"],
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": false,
    "no-any": {
      "severity": "warn",
      "options": ["false"]
    },
    "typedef": {
      "severity": "error",
      "options": [
        "call-signature",
        "arrow-call-signature",
        "parameter",
        "arrow-parameter",
        "property-declaration",
        "variable-declaration",
        "member-variable-declaration",
        "object-destructuring",
        "array-destructuring"
      ]
    },
    "no-unused-variable": {
      "severity": "warn",
      "options": ["true"]
    },
    "naming-convention": [true, {"type": "enumMember", "format": "PascalCase"}]
  }
}
